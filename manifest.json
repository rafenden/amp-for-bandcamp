{
  "manifest_version": 3,
  
  "name": "Bandcamp Tuned",
  "version": "1.0.1",
  "description": "Enhances Bandcamp functionality with playback controls and UI improvements.",

  "icons": {
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "512": "icons/icon512.png",
    "1024": "icons/icon1024.png"
  },

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png",
      "512": "icons/icon512.png",
      "1024": "icons/icon1024.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.bandcamp.com/*"],
      "css": ["src/content/content.css"],
      "js": ["vendor/browser-polyfill.min.js", "src/content/content.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/*"],
      "matches": ["*://*.bandcamp.com/*"]
    }
  ],
  "permissions": ["storage"],
  "browser_specific_settings": {
    "safari": {
      "strict_min_version": "14",
      "strict_max_version": "*"
    },
    "gecko": {
      "id": "bandcamp-tuned@enden.com",
      "strict_min_version": "57.0"
    }
  }
}
