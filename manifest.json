{
  "manifest_version": 3,
  
  "name": "Bandcamp Tuned",
  "version": "1.0.0",
  "description": "Enhances Bandcamp functionality with playback controls and UI improvements",

  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.bandcamp.com/*"],
      "js": ["vendor/browser-polyfill.min.js", "src/lib/BasePage.js", "src/lib/AlbumPage.js", "src/lib/CollectionPage.js", "src/lib/FeedPage.js", "src/content/content.js"],
      "css": ["src/content/content.css"]
    }
  ],
  "permissions": ["storage"],
  "browser_specific_settings": {
    "safari": {
      "strict_min_version": "14",
      "strict_max_version": "*"
    },
    "gecko": {
      "id": "bandcamp-tuned@rafenden.com",
      "strict_min_version": "57.0"
    }
  }
}
